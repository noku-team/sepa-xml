<?xml version="1.0" encoding="UTF-8"?>
<Document xmlns="urn:iso:std:iso:20022:tech:xsd:pain.001.001.03" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:iso:std:iso:20022:tech:xsd:pain.001.001.03 pain.001.001.03.xsd">
  <CstmrCdtTrfInitn>
    <GrpHdr>
      <MsgId>{{_header.messageId}}</MsgId>
      <CreDtTm>{{timestamp}}</CreDtTm>
      <NbOfTxs>{{_header.transactionCount}}</NbOfTxs>
      <CtrlSum>{{_header.transactionControlSum}}</CtrlSum>
      <InitgPty>
        <Nm>{{_header.initiator}}</Nm>
        {{#if _header.initiatorId}}
          <Id>
            <PrvtId>
              <Othr>
                <Id>{{_header.initiatorId}}</Id>
              </Othr>
            </PrvtId>
          </Id>
        {{/if}}
      </InitgPty>
    </GrpHdr>
    {{#each _payments.transactions}}
    <PmtInf>
      <PmtInfId>{{id}}</PmtInfId>
			<PmtMtd>{{method}}</PmtMtd>
			<BtchBookg>{{batchBooking}}</BtchBookg>
			<ReqdExctnDt>{{when}}</ReqdExctnDt>
      <Dbtr>
        <Nm>{{senderName}}</Nm>
      </Dbtr>
      <DbtrAcct>
				<Id>
					<IBAN>{{recipientIBAN}}</IBAN>
				</Id>
			</DbtrAcct>
      {{#if bic}}
      <DbtrAgt>
				<FinInstnId>
					<BIC>{{bic}}</BIC>
				</FinInstnId>
			</DbtrAgt>
      {{/if}}
      <CdtTrfTxInf>
        <PmtId>
					<InstrId>{{id}}-01</InstrId>
					<EndToEndId>{{endToEndId}}</EndToEndId>
				</PmtId>
        {{#if typeInformation}}
        <PmtTpInf>
					<LclInstrm>
						<Prtry>{{typeInformation}}</Prtry>
					</LclInstrm>
				</PmtTpInf>
        {{/if}}
        <Amt>
          <InstdAmt Ccy="{{ccy}}">{{amount}}</InstdAmt>
        </Amt>
        {{#if creditorName}}
        <Cdtr>
					<Nm>{{creditorName}}</Nm>
          {{#if creditorAddress}}
          <PstlAdr>
						<StrtNm>{{creditorAddress.street}}</StrtNm>
						<BldgNb>{{creditorAddress.number}}</BldgNb>
						<PstCd>{{creditorAddress.postalCode}}</PstCd>
						<TwnNm>{{creditorAddress.city}}</TwnNm>
						<Ctry>{{creditorAddress.country}}</Ctry>
					</PstlAdr>
          {{/if}}					
				</Cdtr>
        {{/if}}        
        {{#if cashAccount}}
        <CdtrAcct>
					<Id>
						<Othr>
							<Id>{{cashAccount}}</Id>
						</Othr>
					</Id>
				</CdtrAcct>
        {{/if}}
        {{#if remittanceInformation}}
        <RmtInf>
					<Strd>
						<CdtrRefInf>
							<Ref>{{remittanceInformation}}</Ref>
						</CdtrRefInf>
					</Strd>
				</RmtInf>
        {{/if}}
      </CdtTrfTxInf>
    </PmtInf>
    {{/each}}
  </CstmrCdtTrfInitn>
</Document>
